# Entrada de datos
EDJUAN = float(input("Ingrese la edad de Juan: "))

# Proceso
EDALBER = (2/3) * EDJUAN
EDANA = (4/3) * EDJUAN
EDMAMA = EDALBER + EDJUAN + EDANA

# Salida de datos
print("\n--- Resultados ---")
print(f"Edad de Alberto: {EDALBER:.2f} años")
print(f"Edad de Juan: {EDJUAN:.2f} años")
print(f"Edad de Ana: {EDANA:.2f} años")
print(f"Edad de la mamá: {EDMAMA:.2f} años")
